
#include <iostream>

using namespace std;

int main()
{
    double x = 0., y = 1., z = 2.;
    double *p[3];
    p[0] = &x;
    p[1] = &y;
    p[2] = &z;
    cout << *p[0] << " " << *p[1] << " " << *p[2] << '\n';

    return 0;
}

#include <iostream>

using namespace std;

const int x = 4, y = 3;
void fun(int n[x][y], int x, int y){
    for (int i = 0; i < x*y; i++)
     *(*n + i) = i+1;
}

int main()
{
    int n[x][y] = {};
    fun (n, x, y );
    for (int i=0; i < x; i++){
        for (int j = 0; j < y; j++)
            cout << n[x][y] << " ";
        cout << '\n';
    }
    
    return 0;
}

#include <iostream>

using namespace std;

const int x = 4, y = 3;
void fun(int n[x][y], int x, int y){
    for (int i=0; i < x; i++)
        for (int j = 0; j < y; j++)
        *(*n + i + j) = i + 1;
}

int main(){
    int n[x][y] = {};
    fun (n, x, y );
    for (int i=0; i < x; i++){
        for (int j = 0; j < y; j++)
            cout << n[x][y] << " ";
        cout << '\n';
    }
    

    return 0;
}
